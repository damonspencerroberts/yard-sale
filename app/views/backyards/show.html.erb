<div class="container">
  <div class="row">
    <div class="col-sm-8">
      <% @backyard.photos.each do |photo| %>
        <%= cl_image_tag photo.key, height: 400, width: 700, crop: :fill, class:"show-image" %>      
      <% end %>
      <div class="garden-description">
        <h3><%= @backyard.name %></h3>
        <p><%= @backyard.description %></p>
      </div>
    </div>
      <div class="col-sm-4 backyard-description h-100">
        <div>
          <p class="align-bottom">Address: <%= @backyard.address %></p>
          <p>Price: <strong>Â£<%=@backyard.price %></strong></p>
          <p>Max Capacity: <strong><%= @backyard.max_capacity %></strong></p>
        </div>
          <div>
            <%= simple_form_for [@backyard, @booking] do |f| %>
              <h2>Create a booking</h2>
              <%= f.input :date, as: :date, html5: true %>
              <%= f.input :number_of_guests, collection: 1..@backyard.max_capacity %>
              <%= f.button :submit, class: "btn-success btn w-100" %>
            <% end %>
          </div>
      </div>
  </div>
</div>


<% @reviews.each do |review| %>
  <%= review.content %>
  <%= review.rating %>
<% end  %>

  <div class="row justify-content-center my-2 p-3">
    <div class="col-xs-12 col-sm-4 col-sm-offset-4">
      <h2>Add review</h2>
      <%= simple_form_for [@backyard, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.submit %>
      <% end %>
    </div>
  </div>