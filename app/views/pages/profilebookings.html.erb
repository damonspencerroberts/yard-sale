<div class="container">
  <%= render partial: "profile-header" %>
  <div>
    <ul class="list-inline tabs-underlined">
      <li>
        <%= link_to "Profile", user_profile_path, class: "tab-underlined" %>
      </li>
      <li>
        <%= link_to "Bookings", user_profile_bookings_path, class: "tab-underlined active" %>
      </li>
      <li>
        <%= link_to "Backyards", user_profile_bookings_path, class: "tab-underlined" %>
      </li>
    </ul>
  </div>
  <div>
    <div class="d-flex justify-content-center align-items-center p-4">
      <h3>Your Bookings</h3>
    </div>
    <div class="my-5">
      <% @bookings.each_with_index do |booking, index| %>
        <div class="card-product">
          <%= cl_image_tag @backyards[index].photos.first.key %>
          <div class="card-product-infos">
            <h2><%= @backyards[index].name %></h2>
            <p><%= @backyards[index].description %></p>
          </div>
          <div class="p-4">
            <% if booking.confirmed %>
              <div class = "confirmed">
                <span>Confirmed</span>
              </div>
            <% else %>
              <div class = "pending">
                <span>Pending</span>
              </div>
            <% end %>
            <div>
              <div>
                <p>Date: <%= booking.date %></p>
              </div>
              <div>
                <p>Date: <%= booking.number_of_guests %></p>
              </div>
              <div>
                <p>Cost: Â£<%= @backyards[index].price %></p>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>