<div class="container">
  <%= render partial: "profile-header" %>
  <div>
    <ul class="list-inline tabs-underlined">
      <li>
        <%= link_to "Profile", user_profile_path, class: "tab-underlined" %>
      </li>
      <li>
        <%= link_to "My bookings", user_profile_bookings_path, class: "tab-underlined" %>
      </li>
      <li>
        <%= link_to "Listed backyards", user_profile_backyards_path, class: "tab-underlined active" %>
      </li>
      <li>
        <%= link_to "Booking Confirmation", user_profile_confirmation_path, class: "tab-underlined" %>
      </li>
    </ul>
  </div>
  <div class="d-flex justify-content-center align-items-center p-4">
    <h3>Your Listed Backyards</h3>
  </div>
  <div class="d-flex justify-content-center align-items-center my-3">
    <%= link_to "New Backyard", new_backyard_path, class: "btn btn-success" %>
  </div>
  <div class="my-5">
    <% if @backyards.empty? %>
      <div class="d-flex flex-column justify-content-center align-items-center p-1">
        <div class="py-2">
          <p class="text-danger">
            Currently no listed backyards!
          </p>
        </div>
      </div>
    <% else %>
      <% @backyards.each do |backyard| %>
        <div class="card-product">
          <%= cl_image_tag backyard.photos.first.key %>
          <div class="card-product-infos py-3">
            <h2><%= backyard.name %></h2>
            <p><%= backyard.description %></p>
          </div>
          <div class="p-4">
            <p>Price: Â£<%= backyard.price %></p>
            <p>Max Capacity: <%= backyard.max_capacity %></p>
          </div>
          <div class="d-flex flex-column p-4">
            <%= link_to "View", backyard_path(backyard) %>
            <%= link_to "Edit", edit_backyard_path(backyard) %>
            <%= link_to "Delete", backyard_path(backyard), method: :delete, data: { confirm: 'Are you sure?'} %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>